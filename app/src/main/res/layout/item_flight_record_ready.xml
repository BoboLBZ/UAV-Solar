<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardBackgroundColor="@color/bg_cardview_light"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/tv_mission_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="Mission One"
                android:textColor="@color/item_text_black"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tv_execute_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_mission_name"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:text="2018-01-01 11:11:11"
                android:textColor="@color/item_text_black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_is_download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_execute_date"
                android:layout_marginStart="50dp"
                android:layout_marginTop="14dp"
                android:text="( 未下载 )" />

            <TextView
                android:id="@+id/view_hasVisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/tv_mission_name"
                android:background="@drawable/border_has_pics"
                android:text="可见光"
                android:textColor="@color/item_text_red"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/view_hasInfrared"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/view_hasVisible"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_has_pics"
                android:text="红外光"
                android:textColor="@color/item_text_red"
                android:textSize="12sp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_flight_record_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingEnd="20dp"
            android:paddingStart="20dp">

            <Button
                android:id="@+id/btn_record_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:layout_weight="1"
                android:background="@drawable/bg_record_func_button"
                android:minHeight="30dp"
                android:text="@string/record_func_delete"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_record_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:layout_weight="1"
                android:background="@drawable/bg_record_func_button"
                android:minHeight="30dp"
                android:text="@string/record_func_check"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>

